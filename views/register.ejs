extends layout

block content
  h1= title
  
  if registrationError
    .error-msg
      p= registrationError

  form.login(action='/register', method='post')
    p REGISTRO DE USUARIO
    div
      label(for='username') NOMBRE 
      input(type='text', id='nombre', name='nombre')
    div
      label(for='email') CORREO ELECTRONICO 
      input(type='email', id='correo', name='correo')
    div
      label(for='matricula') MATRICULA 
      input(type='text', id='matricula', name='matricula')
    div
      label(for='password')  CONTRASEÑA
      input(type='password', id='password', name='password')
    div
      label(for='confirm_password') CONFIRMAR CONTRASEÑA
      input(type='password', id='confirm_password', name='confirmPassword')
    div
      input(type='hidden', name='_csrf', value=csrfToken)

    if registerFormExtraParams
      each value, key in registerFormExtraParams
        div
          input(type='hidden', name=key, value=value)
    div
      button(type='submit') REGISTRARSE